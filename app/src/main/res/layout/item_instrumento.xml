<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#ffffff"
            android:layout_margin="5dp"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/imageEvaluated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    />



                <RelativeLayout
                    android:id="@+id/relative_text"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_evaluated"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:text="Contenido de prueba "/>

                    <TextView
                        android:layout_below="@+id/txt_evaluated"
                        android:id="@+id/txt_serie"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:text="Contenido de prueba "/>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/txt_evaluated"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="30dp">

                        <Spinner
                            android:id="@+id/spn_item"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:entries="@array/entradas"
                            android:foregroundGravity="center"></Spinner>

                    </RelativeLayout>




                </RelativeLayout>





            </LinearLayout>



        </androidx.cardview.widget.CardView>






    </LinearLayout>

</androidx.cardview.widget.CardView>